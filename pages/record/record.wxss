/* record.wxss */
page{
  width:100%;
  height:100%;
}
.contentbg {
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
  height:400rpx;
  background-image: -webkit-linear-gradient(top,#115D7B 2%,#28919B 43%,#42C2C3 63%);
  background-image: linear-gradient(-180deg,#115D7B 2%,#28919B 43%,#42C2C3 63%);
}
/* 背景图 */
.contentbg .record-text-move{
  position: absolute;
  left:0px;
  top:0px;
  width:100%;
  height:100%;
  z-index: 201;
  overflow: hidden;
}
.bg-title {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 277rpx;
  padding:50rpx 0rpx 34rpx 30rpx;
  font-size:50rpx;
  font-weight: bold;
  color:#fff;
}
.onevalue{
   font-size: 22pt;
   font-weight: bold;
   color: #ffffff;
    display: flex;
}
.onedesc{
    font-size: 10pt;
        display: flex;
    color: #ffffff;
    white-space: nowrap;
    font-weight: bold;
}
.onelist{
  
  display:block;
  float:left;
  width:33.333333%;
  flex-direction: column;
  text-align: left
}
.titlelist{
  
    padding-top:20rpx;
   overflow: hidden;
   padding-left:30rpx;
   padding-right:30rpx;
}
.tips{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background:rgba(255, 255, 255, 0.2);
  color: #ffffff;
  position: absolute;
  left: 0;
  bottom: 0;
  font-size:25rpx;
  padding-left: 30rpx;
}
.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  z-index: 999;
  border-radius: 50%;
  position: absolute;
  right: 30rpx;
  top: 420rpx;
    box-shadow: #ababab 9rpx 9rpx 24rpx;
}
/* 晒战绩 */
.z-userCenter{
  position: absolute;
  right:40rpx;
  top:40rpx;
  height:60rpx;
  display:flex;
  background:rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  padding-right:10rpx;
  z-index: 201;
}
.z-userCenter text{
  font-size:30rpx;
  color:#fff;
  display: block;
  line-height:60rpx;
}
.z-userCenter image{
  margin-right:20rpx;
  width:60rpx;
  height:60rpx;
  display: block;
  border-radius: 50%;

}

/*列表*/
.records-list{
  width: 100%;
  position: absolute;
  left: 0;
  top:400rpx;
  bottom: 0;
  background-color: #f5f5f5;
  overflow: hidden;
}
.records-desc{
  font-size: 10pt;
  color: #acacac;
  margin: 30rpx 30rpx 30rpx 30rpx;
}
.onerecords{
   height: 90rpx;
   line-height: 90rpx;
   width: 100%;
  background-color: #fff;
  float: left;
}
.timer{
  display: inline-block;
  color: #959595;
  font-size:30rpx;
  font-weight: bold;
  float:left;
  margin-left: 30rpx;
}
.state{
  color: #EB853A;
  font-size:26rpx;
  display: inline-block;
  float: left;
  margin-left: 50rpx;
  font-weight: bold;
}
.paymoney{
  color: #EB853A;
  font-size:30rpx;
  display: inline-block;
  float: right;
  margin-right: 30rpx;
  font-weight: bold;
}


/* canvas绘图 */
.z-canvas-box{
  width:100%;
  height:100%;
  position:fixed;
  top:0px;
  left:0px;
  right:0px;
  bottom:0px;
  background: rgba(0, 0, 0, 0.56);
  display: flex;
  align-items: center;
  justify-content: center;

}
.z-canvas-box canvas{
  display: block;
  margin:0 auto;
  background: #fff;
}

.z-canvas-box  .share-btn-box{
  height:auto;
  background: #fff;
  overflow: hidden;
  padding:20rpx;
}
.z-canvas-box .cencle-btn{
  display: block;
  float:left;
  height:60rpx;
  font-size:30rpx;
  line-height:60rpx;
  border-radius:45rpx;
  padding-left:50rpx;
  padding-right:50rpx;
  border:1px solid #EB853A;
  background: none;
}
.z-canvas-box .share-btn{
  display: block;
  float:right;
  height:60rpx;
  font-size:30rpx;
  line-height:60rpx;
  border-radius:45rpx;
  background:#E89800;
  color:#fff;
  transform-origin: center center;
}


