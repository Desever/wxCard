/**index.wxss**/
.z-top-container {
  height:690rpx;
  position: relative;
  overflow: hidden;
  background-image: -webkit-linear-gradient(top,#115D7B 2%,#28919B 43%,#42C2C3 63%,#FDFEDC 97%);
  background-image: linear-gradient(-180deg,#115D7B 2%,#28919B 43%,#42C2C3 63%,#FDFEDC 97%);
}
.z-Slogan{
  position: absolute;
  left:0px;
  bottom:0px;
  width:100%;
  z-index: 200;
  height:225rpx;
  
}
/* 我的战绩 */
.z-userCenter{
  position: absolute;
  left:0px;
  top:50rpx;
  height:80rpx;
  display:flex;
  background:rgba(255, 255, 255, 0.3);
  border-top-right-radius:40rpx;
  border-bottom-right-radius:40rpx;
  z-index: 202;
  padding-left:20rpx;
}
.z-userCenter image{
  margin-top:10rpx;
  margin-right:10rpx;
  width:60rpx;
  height:60rpx;
  display: block;
  border-radius: 50%;
}


/* 分享给好友 */
.z-shareUser{

  position: absolute;
  right:0px;
  bottom:20rpx;
  width:144rpx;
  height:92rpx;
  z-index: 202;
}
.z-shareUser image{
  width:100%;
  height:100%;
  display: block;
}
.z-shareUser button{
  position: absolute;
  left:0px;
  top:0px;
  width:100%;
  height:100%;
  opacity: 0;
}

/* 文字定位 */
.bg-positText{
  position: absolute;
  left:0px;
  top:0px;
  overflow: hidden;
  width:100%;
  height:100%;
  z-index: 201;
}


/* 瓜分 */
.z-carvUp-text{
  width:100%;
  display: block;
  text-align: center;
  font-size:30rpx;
  color: #fff;
  padding-top:80rpx;
  padding-bottom:0rpx;
}
.z-carvUp-num{
  width:100%;
  display: block;
  text-align: center;
  font-size:110rpx;
  height:110rpx;
  line-height:110rpx;
  color: #fff;
  padding-bottom:10rpx;
}
/* 头像 */
.z-allCher-list{
  padding-top:10rpx;
  width:100%;
  overflow: hidden;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.z-allCher-list image{
  display:block;
  width:40rpx;
  height:40rpx;
  border-radius: 50%;
  border:2px solid #fff;
  margin-left:-10rpx;
}

/* 挑战人数 */
.z-challenge-text{
  width:100%;
  display: block;
  text-align: center;
  font-size:30rpx;
  color: #fff;
  padding-bottom:30rpx;
}
/* 参与按钮 */
.z-join{
  padding-top:60rpx;
  padding-left:40rpx;
  padding-right:40rpx;
  padding-bottom:40rpx;
}
.z-join button{
  height:110rpx;
  font-size:35rpx;
  line-height:110rpx;
  border-radius:0rpx;
  background: #FF801A;
  color: #fff;
  box-shadow:0px 5px 20px rgba(232,152,0,0.56);
  font-weight:bold;
  border:0px;
  outline:none;

}
button::after{
  display: none;
}

/* 打卡结果 */
.join-modal{
  position: fixed;
  top:0px;
  bottom:0px;
  left:0px;
  right:0px;
  background: rgba(0, 0, 0, 0.56);
  z-index:9999;
  display: none;
  overflow: hidden;
}
.join-modal-active{
  display: block;
}
.join-modal .close-modal{
  width:30px;
  height:30px;
  margin:0 auto;
  display: block;
  margin-top:20rpx;
}
.z-join-result{
  margin:0 auto;
  width:600rpx;
  overflow: hidden;
  margin-top:160rpx;
  position: relative;
  height:750rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.z-join-result .clock-sBg{
  position: absolute;
  left:0px;
  bottom:0px;
  width:100%;
  height:800rpx;
  z-index: 200;
}
.z-join-result .header{
  position: absolute;
  left:0px;
  top:80rpx;
  width:100%;
  z-index: 201;
}

.z-join-result .header image{
  width:509rpx;
  height:77rpx;
  margin:0 auto;
  display: block
}

.z-join-result .header text{
  display: block;
  text-align: center;
  font-size:30rpx;
  color: #fff;
  padding-top:50rpx;
}

.z-join-result .footer{
  position: absolute;
  left:0px;
  bottom:40rpx;
  width:100%;
  z-index: 201;
}
.z-join-result .footer .money-text{
  display: block;
  text-align: center;
  font-size:30rpx;
  color: #878787;
}
.joinRes-style button{
  box-shadow: none;
}
/* 规则 */
.z-role{
  width:100%;
  padding-top:60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.z-role text{
  display:block;
  text-align: center;
  font-size:28rpx;
  color:rgba(255,255,255,0.7);
}
.z-role image{
  width:28rpx;
  height:28rpx;
  display:block;
}
/* 打卡现状 */
.z-tardy,.z-tardy-num{
  width:100%;
}
.z-tardy .title{
  width:100%;
  text-align: center;
  font-size:40rpx;
  font-weight: bold;
  color:#000;
  display: block;
  padding-top:40rpx;
}
.z-tardy-num{
  width:100%;
  text-align: center;
  display: block;
  padding-bottom:30rpx;
}
.z-tardy-num view{
  display: inline-block;
   font-size:35rpx;
   color: #999;
}
.z-tardy-num .success{
  padding-right:20rpx;
  font-size:30rpx;
}
.z-tardy-num .faild{
  font-size:30rpx;
}

.z-tardy-num .success text{
  color:#E89800;
  font-size:30rpx;

}
.z-tardy-num .faild text{
  color:#87BF68;
   font-size:30rpx;
}
/* 参与结果 */
.z-chMoney-res {
  display: flex;
  flex-flow: row;
  justify-content:space-around;
}

.z-chMoney-res .imglist-box {
  width:33.333333%;
  position: relative;
  padding-bottom:30rpx;
  overflow: hidden;
}
.z-chMoney-res .imglist-box .face{
  display: block;
  height: 120rpx;
  width:120rpx;
  margin:0 auto;
  border-radius: 50%;
}

.z-chMoney-res .imglist-box .userTimer{
  display: block;
  text-align: center;
  color:#FF801A;
  font-size:30rpx;
}
.chmoney-type{
  margin-top:-30rpx;
  position: relative;
}
.z-chMoney-res .imglist-box .start{
  width:171rpx;
  height:58rpx;
  display: block;
  margin:0 auto;
}
.z-chMoney-res .imglist-box .userName{
  display: block;
  text-align: center;
  color: #666;
  font-size:30rpx;
}
.z-chMoney-res .imglist-box .userType{
  position: absolute;
  left:10px;
  top:16rpx;
  text-align: center;
  width:100%;
  height:58rpx;
  display: block;
  font-size:22rpx;
  color:#fff;
}